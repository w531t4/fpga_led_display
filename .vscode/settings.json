{
    "files.exclude": {
        "waveforms_projects": true,
        "backup*.tgz": true,
        "*.pyc": true,
        ".pytest_cache": true,
        "oss-cad-suite": true,
        "depends/netlistsvg/node_modules": true,
        "depends": true,
        "images": true,
        "tests/cocotb/src": true,
        "tests/cocotb/sim_build": true,
        "**/__pycache__/**": true
    },
    "verilog.linting.verilator.includePath": ["src/include", "src"],
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "-FI oss-cad-suite/share/yosys/ecp5/cells_bb.v -F build/sim_args -f build/verilator_files.f",
    "verilog.languageServer.veribleVerilogLs.enabled": true,
    "verilog.formatting.verilogHDL.formatter": "verible-verilog-format",
    "verilog.languageServer.veribleVerilogLs.path": "/usr/local/bin/verible-verilog-ls",
    "verilog.languageServer.veribleVerilogLs.arguments": "--rules_config=.rules.verible_lint",
    "python.defaultInterpreterPath": "/home/vscode/.local/venv/bin/python3",
    "pylint.importStrategy": "fromEnvironment",
    "pylint.path": ["/home/vscode/.local/venv/bin/pylint"],
    "python.analysis.extraPaths": ["${workspaceFolder}/tests/cocotb"]
}
